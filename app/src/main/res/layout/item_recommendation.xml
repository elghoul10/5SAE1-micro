
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:background="#80FFFFFF"
    android:elevation="4dp"> <!-- For a shadow effect -->

<ImageView
android:id="@+id/recommendation_image"
android:layout_width="160dp"
android:layout_height="120dp"
android:scaleType="center"
android:contentDescription="Accommodation Image" />

<TextView
android:id="@+id/recommendation_name"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="8dp"
android:text="Accommodation Name"
android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="@android:color/black" />

<TextView
android:id="@+id/recommendation_price"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Price per night: 100 DT"
android:textSize="14sp"
android:textColor="#666666" />

    <!-- "Voir l'offre" Button, smaller size, aligned to the right -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:gravity="end"> <!-- Align to right -->

<Button
    android:id="@+id/view_offer_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:text="Voir l'offre"
    android:backgroundTint="#FFD700"
    android:textColor="@android:color/white"
    android:textSize="14sp" /> <!-- Reduced button size -->
</LinearLayout>
    </LinearLayout>
