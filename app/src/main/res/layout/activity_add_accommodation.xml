<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/background">

    <!-- Card View to Add Shadow and Rounded Corners -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title Field -->
            <EditText
                android:id="@+id/edtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:backgroundTint="@color/accent"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/hintText"
                android:padding="12dp"
                android:drawableStart="@drawable/ic_title" />

            <!-- Name Field -->
            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:backgroundTint="@color/accent"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/hintText"
                android:padding="12dp"
                android:drawableStart="@drawable/ic_person" />

            <!-- Location Field -->
            <EditText
                android:id="@+id/edtLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:backgroundTint="@color/accent"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/hintText"
                android:padding="12dp"
                android:drawableStart="@drawable/ic_location" />

            <!-- Type Field -->
            <EditText
                android:id="@+id/edtType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type"
                android:backgroundTint="@color/accent"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/hintText"
                android:padding="12dp"
                android:drawableStart="@drawable/ic_type" />

            <!-- Capacity Field -->
            <EditText
                android:id="@+id/edtCapacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Capacity"
                android:inputType="number"
                android:backgroundTint="@color/accent"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/hintText"
                android:padding="12dp"
                android:drawableStart="@drawable/ic_capacity" />

            <!-- Price per Night Field -->
            <EditText
                android:id="@+id/edtPricePerNight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price per Night"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/accent"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/hintText"
                android:padding="12dp"
                android:drawableStart="@drawable/ic_price" />

            <!-- Availability Spinner -->
            <Spinner
                android:id="@+id/spinnerAvailability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/spinner_background"
                android:padding="8dp"
                android:textColor="@color/primaryText"
                android:entries="@array/availability_options" />

            <!-- Image Selection Button -->
            <Button
                android:id="@+id/btnSelectImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Image"
                android:backgroundTint="@color/buttonColor"
                android:textColor="@color/primaryText"
                android:layout_marginTop="12dp"
                android:drawableStart="@drawable/ic_image"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_gravity="center" />

            <!-- Image Preview -->
            <ImageView
                android:id="@+id/imgSelectedImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:contentDescription="Selected Image Preview"
                android:scaleType="centerCrop"
                android:background="@drawable/image_background" />

            <!-- Add Accommodation Button -->
            <Button
                android:id="@+id/btnAddAccommodation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Accommodation"
                android:backgroundTint="@color/buttonColor"
                android:textColor="@color/primaryText"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_add"
                android:padding="16dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
