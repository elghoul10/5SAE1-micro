<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/main"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Icon -->
        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:layout_marginBottom="16dp"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true" />

        <!-- Header Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modifier Vos Informations"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:textStyle="bold" />

        <!-- Personal Information Section -->
        <RadioGroup
            android:id="@+id/radio_group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_mr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr" />

            <RadioButton
                android:id="@+id/radio_mme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mme" />

            <RadioButton
                android:id="@+id/radio_mlle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mlle" />
        </RadioGroup>

        <EditText
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prénom"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Votre E-mail ici"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile"
            android:inputType="phone"
            android:layout_marginBottom="16dp" />

        <!-- Occupation Information Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informations sur l'occupation"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:textStyle="bold" />

        <!-- Room Details -->
        <TextView
            android:id="@+id/room_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 x Chambre Double (Amber el fell) Logement Petit Déjeuner Disponible"
            android:textSize="16sp"
            android:textColor="#FFA500"
            android:layout_marginBottom="8dp" />

        <!-- Occupant Names -->
        <EditText
            android:id="@+id/occupant_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom de famille"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/occupant_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prénom"
            android:layout_marginBottom="8dp" />

        <!-- Special Requests Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Souhaits particuliers (Sous réserve de disponibilité)"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/check_late_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrivée Tardive" />

        <CheckBox
            android:id="@+id/check_side_by_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Si possible chambres côté à côte" />

        <CheckBox
            android:id="@+id/check_king_bed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Si possible Grand lit" />

        <!-- Message Field -->
        <EditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Écrire un message"
            android:layout_marginTop="16dp"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top" />

        <!-- Payment Options Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choisir le mode de paiement qui vous convient"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/payment_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/payment_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paiement en ligne" />

            <RadioButton
                android:id="@+id/payment_agency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paiement à l'agence" />
        </RadioGroup>

        <!-- Payment Info -->
        <TextView
            android:id="@+id/payment_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Je paie le montant total en ligne [222.990 TND]"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Terms & Conditions Checkbox -->
        <CheckBox
            android:id="@+id/terms_conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="J'accepte les conditions spécifiques de cette réservation et Les conditions générales de vente, et j’y adhère sans aucune réserve."
            android:layout_marginBottom="16dp" />

        <!-- Update Button -->
        <Button
            android:id="@+id/update_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="METTRE À JOUR VOTRE RÉSERVATION"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
